<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/btn_next"
    android:layout_alignParentBottom="true"
    android:text="@string/text_next"
    style="@style/AppStyle.Button.Colored.Full" />

  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btn_next">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <android.support.v7.widget.CardView
        android:layout_margin="@dimen/mdLayoutSpacing_sm"
        style="@style/MdCardView.Card">

        <LinearLayout
          android:orientation="vertical"
          android:padding="@dimen/mdLayoutSpacing_sm"
          style="@style/MdCardView.Wrapper">

          <Button
            android:paddingLeft="@dimen/mdLayoutSpacing"
            android:paddingRight="@dimen/mdLayoutSpacing"
            android:text="Continue with Android Pay"
            app:drawableStartCompat="@drawable/ic_android_pay"
            style="@style/AppStyle.Button.Colored.Full" />
        </LinearLayout>
      </android.support.v7.widget.CardView>

      <TextView
        android:layout_gravity="center"
        android:text="--- Or ---"
        android:textColor="?attr/mdTextColorHint_backgroundPalette"
        style="@style/MdText.Body1.SingleLine" />

      <android.support.v7.widget.CardView
        android:layout_margin="@dimen/mdLayoutSpacing_sm"
        style="@style/MdCardView.Card">

        <LinearLayout
          android:orientation="vertical"
          android:paddingBottom="@dimen/mdLayoutSpacing_xs"
          style="@style/MdCardView.Wrapper">

          <TextView
            android:layout_marginTop="@dimen/mdLayoutSpacing_xs"
            android:paddingLeft="@dimen/mdLayoutSpacing_sm"
            android:paddingRight="@dimen/mdLayoutSpacing_sm"
            android:paddingTop="@dimen/mdLayoutSpacing_sm"
            android:text="Use credit card"
            style="@style/MdText.Subhead1.SingleLine" />

          <android.support.design.widget.TextInputLayout
            android:id="@+id/til_card_number"
            style="@style/MdTextField.TextWithLabel">

            <android.support.design.widget.TextInputEditText
              android:id="@+id/input_card_number"
              android:hint="Credit Card #No"
              android:imeOptions="actionNext"
              android:inputType="numberSigned"
              android:maxLines="1"
              style="@style/MdTextField.TextWithLabel.Text" />
          </android.support.design.widget.TextInputLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
              android:id="@+id/til_expires"
              android:layout_width="0dp"
              android:layout_weight="1"
              style="@style/MdTextField.TextWithLabel">

              <android.support.design.widget.TextInputEditText
                android:id="@+id/input_expires"
                android:hint="Expires (mm/yy)"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:maxLines="1"
                style="@style/MdTextField.TextWithLabel.Text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
              android:id="@+id/til_cvv_code"
              android:layout_width="0dp"
              android:layout_weight="1"
              style="@style/MdTextField.TextWithLabel">

              <android.support.design.widget.TextInputEditText
                android:id="@+id/input_cvv_code"
                android:hint="CVV-Code"
                android:imeOptions="actionDone"
                android:inputType="numberSigned"
                android:maxLines="1"
                style="@style/MdTextField.TextWithLabel.Text" />
            </android.support.design.widget.TextInputLayout>
          </LinearLayout>
        </LinearLayout>
      </android.support.v7.widget.CardView>
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

