<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:fresco="http://schemas.android.com/apk/res-auto">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    app:navigationIcon="@drawable/ic_arrow_back_primary"
    style="@style/MdToolbar" />

  <Button
    android:id="@+id/btn_add_to_cart"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mdListItemHeight_lg"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/mdLayoutSpacingInverse_sm"
    android:layout_marginLeft="@dimen/mdLayoutSpacingInverse_sm"
    android:layout_marginRight="@dimen/mdLayoutSpacingInverse_sm"
    android:layout_marginTop="@dimen/mdLayoutSpacingInverse_sm"
    android:text="@string/text_add_to_cart"
    style="@style/MdButton.Colored" />

  <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/btn_add_to_cart"
    android:layout_below="@id/toolbar"
    android:background="?attr/mdColor_backgroundPalette_light">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:transitionName="@string/transition_product_thumbnail"
        fresco:actualImageScaleType="fitCenter"
        fresco:viewAspectRatio="@dimen/thumbnail_ratio"
        tools:targetApi="lollipop" />

      <RelativeLayout style="@style/MdListItem.TwoLine.TextOnly">

        <LinearLayout style="@style/Base.MdListItem.Wrapper">

          <TextView
            android:id="@+id/price"
            android:textColor="?attr/mdTextColorPrimary_backgroundPalette"
            android:textSize="@dimen/mdFontSize_title"
            tools:text="$296.00"
            style="@style/Base.MdListItem.Title" />

          <TextView
            android:id="@+id/title"
            android:textColor="?attr/mdTextColorSecondary_backgroundPalette"
            tools:text="@string/text_short"
            style="@style/Base.MdListItem.Subtitle" />
        </LinearLayout>
      </RelativeLayout>

      <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/mdLayoutSpacing"
        android:paddingLeft="@dimen/mdLayoutSpacing"
        android:paddingRight="@dimen/mdLayoutSpacing"
        android:textColor="?attr/mdTextColorPrimary_backgroundPalette"
        tools:text="@string/text_long"
        style="@style/MdText.Body1" />
    </LinearLayout>
  </android.support.v4.widget.NestedScrollView>

  <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/backgroundGradientSize"
    android:layout_below="@id/toolbar"
    android:background="@drawable/background_gradient_top_bottom" />
</RelativeLayout>