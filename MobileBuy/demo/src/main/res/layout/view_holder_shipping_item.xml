<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="?attr/selectableItemBackground"
  style="@style/MdListItem.TwoLine.IconWithText">

  <RadioButton
    android:id="@+id/radio_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/mdLayoutSpacing"
    android:layout_marginStart="@dimen/mdLayoutSpacing"
    android:clickable="false" />

  <LinearLayout style="@style/Base.MdListItem.Wrapper">

    <TextView
      android:id="@+id/title"
      tools:text="DHL"
      style="@style/Base.MdListItem.Title.Left" />

    <TextView
      android:id="@+id/subtitle"
      tools:text="No additional cost"
      style="@style/Base.MdListItem.Subtitle.Left" />
  </LinearLayout>
</RelativeLayout>