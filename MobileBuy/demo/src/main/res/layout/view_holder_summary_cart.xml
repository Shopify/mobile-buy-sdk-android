<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_margin="@dimen/mdLayoutSpacing_xs"
  style="@style/MdCardView.Card">

  <LinearLayout
    android:orientation="vertical"
    style="@style/MdCardView.Wrapper">

    <TextView
      android:padding="@dimen/mdLayoutSpacing_sm"
      android:text="@string/text_cart"
      android:textColor="?attr/mdTextColorPrimary_backgroundPalette"
      style="@style/MdText.Title" />

    <android.support.v7.widget.RecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </LinearLayout>
</android.support.v7.widget.CardView>