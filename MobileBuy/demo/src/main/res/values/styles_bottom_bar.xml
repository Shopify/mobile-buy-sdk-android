<resources>

  <style name="Widget.BottomBar" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/mdActionBarSize</item>
    <item name="android:minHeight">@dimen/mdActionBarSize</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">?attr/mdColor_primaryPalette</item>
  </style>

  <style name="Widget.BottomBar.Item" parent="">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1</item>
    <item name="android:paddingTop">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:paddingBottom">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:clickable">true</item>
  </style>

  <style name="Widget.BottomBar.Item.Icon" parent="Base.Widget.BottomBar.Item.Icon" />

  <style name="Widget.BottomBar.Item.Title" parent="Base.Widget.BottomBar.Item.Title" />

  <!-- base -->
  <style name="Base.Widget.BottomBar.Item.Icon" parent="">
    <item name="android:layout_width">28dp</item>
    <item name="android:layout_height">28dp</item>
    <item name="android:layout_gravity">center_horizontal</item>
  </style>

  <style name="Base.Widget.BottomBar.Item.Title" parent="MdText.Body1.SingleLine">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:paddingRight">@dimen/mdLayoutSpacing_xs</item>
    <item name="android:layout_gravity">center_horizontal|bottom</item>
    <item name="android:textColor">?attr/mdIconColor_backgroundPalette</item>
  </style>
</resources>